      "Bash(uniq /tmp/*)",
      "Bash(column /tmp/*)",
      "Bash(fold /tmp/*)",
      "Bash(fmt /tmp/*)",
      "Bash(pr /tmp/*)",
      "Bash(expand /tmp/*)",
      "Bash(unexpand /tmp/*)",
      "Skill(dyad:*)",

      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(npm update:*)",
      "Bash(npm ls:*)",
      "Bash(npm view:*)",
      "Bash(DEBUG=pw:browser npm run e2e:*)",
      "Bash(PLAYWRIGHT_HTML_OPEN=never npm run e2e:*)",
      "Bash(DEBUG=pw:browser PLAYWRIGHT_HTML_OPEN=never npm run e2e:*)",
      "Bash(npx playwright show-trace:*)",

      "Bash(git:*)",

      "Bash(gh api:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr ready:*)",
      "Bash(gh pr review:*)",
      "Bash(gh pr close:*)",
      "Bash(gh pr reopen:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue close:*)",
      "Bash(gh issue reopen:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",

      "Bash(ps:*)",
      "Bash(lsof:*)",
      "Bash(pkill:*)",
      "Bash(jq:*)",

      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(pwd:*)",

      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(xargs cat:*)",
      "Bash(cat:*)",
      "Bash(less:*)",
      "Bash(file:*)",
      "Bash(stat:*)",

      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(ag:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
