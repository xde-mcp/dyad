      "Write(/tmp/)",
      "Write(/tmp/**)",
      "Bash(mkdir)",

      "Bash(cat /tmp/*)",
      "Bash(head /tmp/*)",
      "Bash(tail /tmp/*)",
      "Bash(less /tmp/*)",
      "Bash(more /tmp/*)",
      "Bash(wc /tmp/*)",
      "Bash(wc -l /tmp/*)",
      "Bash(wc -w /tmp/*)",
      "Bash(wc -c /tmp/*)",
      "Bash(ls /tmp/*)",
      "Bash(ls -l /tmp/*)",
      "Bash(ls -la /tmp/*)",
      "Bash(ls /tmp/)",
      "Bash(ls -l /tmp/)",
      "Bash(ls -la /tmp/)",
      "Bash(file /tmp/*)",
      "Bash(stat /tmp/*)",
      "Bash(diff /tmp/*)",
      "Bash(md5sum /tmp/*)",
      "Bash(sha256sum /tmp/*)",
      "Bash(xxd /tmp/*)",
